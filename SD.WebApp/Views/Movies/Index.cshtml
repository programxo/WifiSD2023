@model IEnumerable<Wifi.SD.Core.Application.Movies.Results.MovieDto>

@{
    ViewData["Title"] = $"{BasicRes.Movies}";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">@BasicRes.CreateNewMovie</a>
</p>
<table id="MoviesTable" class="table">
    <thead>
        <tr>
            <th>
                @BasicRes.Genre
            </th>
            <th>
                @BasicRes.MediumType
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReleaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rating)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.GenreName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MediumTypeCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">@BasicRes.Edit</a> |
                    <a href="/Movies/Details/@item.Id" title="@BasicRes.Details" data-name="Details">@BasicRes.Details</a> |
                @*<a asp-action="Delete" asp-route-id="@item.Id">Delete</a>*@
                    <a href="/Movies/Delete/@item.Id" title="@BasicRes.Delete" data-id="@item.Id" data-name="Delete">@BasicRes.Delete</a> @*Perfect Binding in html*@
            </td>
        </tr>
}
    </tbody>
</table>

<!-- Modal Dialog -->

@(await Html.PartialAsync("_ConfirmModal", new ViewDataDictionary(ViewData) {{"ModalId", "ConfirmModal"}, {"Action", "Delete"}, {"Controller", "Movies"}}))

@section Scripts{
    <script src="~/js/application/MoviesIndex.js"></script>
}
